
<% if @success %>
	var postContainer = $('#<%= @comment.commentable_type.downcase %><%=@comment.commentable_id.to_s %>');
	postContainer.children('.comments_container').show().append("<%= escape_javascript( render(:partial => 'shared/comment', :locals => { :comment => @comment }) ) %>");
<% else %>
	console.log('comment add failure!');
<% end %>