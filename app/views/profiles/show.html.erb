<% @user = @profile.user %>

<h1><%= @user.name %></h1>

<% if @is_myprofile %>
	<%= link_to "Edit profile", edit_profile_path(@profile) %>
<% end %>

<div class="profile_picture">
	<%= image_tag @profile.pic_url %>
	
	<% if @is_myprofile %>
		<div class="edit_picture">
			<%= link_to 'Change picture', '/profiles/edit_prof_pic/'+params[:id] %>	
		</div>
	<% end %>
</div>

<% if !@profile.quote.blank? %>
	<div class="quote_box">
		<p><%= nl2br(@profile.quote) %></p>
	</div>
<% end %>

<% if !@profile.birthdate.blank? %>
	<div class="info_box">
		<b>Birthdate</b><br/>
		<%= @profile.birthdate.strftime("%B %d, %Y") %>
	</div>
<% end %>