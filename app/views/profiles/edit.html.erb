<h2>Edit Profile</h2>

<%= form_for @profile, :html => {:class => 'form-stacked'} do |f| %>
	<%= render :partial => '/shared/error_messages', :locals => {:model => @profile} %>
	
	<div class=field>
		<%= f.label :quote %><br>
		<%= f.text_area :quote, :class => 'xlarge', :rows => 5 %>
	</div>
	<div class=field>
		<%= f.label :birthdate %><br>
		<%= f.date_select :birthdate, :order => [:month, :day, :year], :start_year => 1900, :end_year => Time.now.year %>
	</div>
	
	<%= f.submit "Save" %>
<% end %>
