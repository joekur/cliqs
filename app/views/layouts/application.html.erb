<!DOCTYPE html>
<html>
	
  <head>
    <title><%= title %></title>
    <%= csrf_meta_tag %>
		<%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= favicon_link_tag %>
  </head>
  
  <body class="<%= params[:controller] %>_controller">
  	
  	<div id="topbar">
			<%= render 'layouts/mainnav' %>
		</div>
  	
    <div id="container">
    	
    	<%= render 'layouts/cliqnav' if defined?(@current_cliq) %>
    	
    	<div id="content">
			<% flash.each do |key, value| %>
				<div class="flash <%= key %>"><%= value %></div>
			<% end %>
			
			<%= yield %>
		</div>
		
		<div id="footer"></div>
      
      	<%= debug(params) if Rails.env.development? %>
      
    </div>
    
  </body>
  
</html>