<% author = photo.user %>

<div class="post_super_container" id="photo<%= photo.id.to_s %>">
	
	<div class="post_container">
		
		<% if author.id==current_user.id %>
			<%= link_to 'x', [@current_cliq, photo], :method => :delete, :confirm => "Are you sure you want to delete this photo?", :class => "ex", :remote => true  %>
		<% end %>
		
		<div class="post_picture">
			<%= link_to post_pic_for(author, 90), post_profile(photo) %>
		</div>
		
		<div class="post_right">
		    <%= link_to author.name, post_profile(photo), :class => 'post_author' %> posted a photo
		    
		    <br>
		    <div class="photo_image_container">
		    	<%= link_to cliq_photo_path(@current_cliq, photo) do %>
		    		<%= image_tag photo.image_url(:wall), :class => 'photo_image' if photo.image? %>
		    	<% end %>	
		    </div>
		    
		    <div class="post_body"><%= nl2br(photo.body) %></div>
		    
		    <div class="post_time"><%= format_datetime(photo.created_at) %></div>
		</div>
	    <div class="clear"></div>
	    
	    <button type="button" class="add_comment_btn">
	    	<%= image_tag "icons/comment_icon.png", :width => 25, :height => 25 %>
	    </button>
		
	</div>
	
	<div class="add_comment_container">
  
    	<%= form_for :comment, :url => "/comments/ajax_add", :remote => true, :html => {:class => 'new_comment_form'} do |f| %>
      		<%= f.text_area :body, :class => "add_comment_body expandable", :rows => 4 %>
      		<%= f.hidden_field :user_id, :value => current_user.id %>
      		<%= f.hidden_field :commentable_id, :value => photo.id %>
      		<%= f.hidden_field :commentable_type, :value => "Photo" %>
      		<button type="submit" class="btn primary submit_comment_btn">Comment</button>
			<button type="button" class="btn secondary cancel_comment_btn">Cancel</button>
		<% end %>
      
	</div>
  
	<%= render :partial => "comments/comment-list", :locals => { :comments => photo.comments } %>
	
</div>
